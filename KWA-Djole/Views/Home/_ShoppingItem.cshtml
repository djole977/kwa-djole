@model KWA_Djole.Business.Dtos.ShoppingItemDto

<div class="card col-3">
    <div class="card-body col-12 d-flex justify-content-center flex-column align-items-center pt-2">
        <h5 style="font-size: 26px">@Model.Name</h5>
        <img src="@Model.ImageUrl" style="width: 200px" />
        <h5 class="mt-2">Izdavač: @Model.Issuer</h5>
        <h5>Datum izdavanja: @Model.IssueDate.ToString("dd.MM.yyyy")</h5>
        
        <div class="d-flex flex-row justify-content-center align-items-center mt-1">
            <i class="fas fa-book"></i>
            <h5 class="mb-0 ml-2">@Model.NumOfPages stranica</h5>
        </div>
        @if (Model.IsDetailsPage)
        {
            <div class="d-flex flex-row justify-content-end align-items-center w-100 mt-3">
                <div class="d-flex flex-row align-items-center">
                    <h5 class="card-text mb-0 mr-3">@Model.Price RSD</h5>
                    <button class="btn btn-success" onclick="@(User.Identity.IsAuthenticated ? "AddItemToCart(" + Model.Id + ")" : "GoToLogin()")">
                        <i class="fas fa-cart-shopping"></i>
                    </button>
                </div>
            </div>
        }
        else
        {
            <div class="d-flex flex-row justify-content-between align-items-center w-100 mt-3">
                <button class="btn btn-primary" onclick="GoToProductDetails(@Model.Id)">Detalji</button>
                <div class="d-flex flex-row align-items-center">
                    <h5 class="card-text mb-0 mr-3">@Model.Price RSD</h5>
                    <button class="btn btn-success" onclick="@(User.Identity.IsAuthenticated ? "AddItemToCart(" + Model.Id + ")" : "GoToLogin()")">
                        <i class="fas fa-cart-shopping"></i>
                    </button>
                </div>
            </div>
        }
    </div>
</div>